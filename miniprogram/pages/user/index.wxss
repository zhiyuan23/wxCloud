page {
    background-color: #f5f5f5;
}

/*项目列表*/
.item_list {
    background-color: white;
    font-size: 32rpx;
}

.item_list_msg {
    position: relative;
    height: 92rpx;
    margin: 0 35rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1rpx solid #f0f0f0;
}

.feedback {
    background: none;
    padding: 0;
    line-height: 1;
}

.feedback::after {
    border: 0
}

.top-border {
    border-top: 1px solid #f5f5f5;
}

.bottom-border {
    border-bottom: 0;
}

.list_icon {
    position: relative;
    width: 50rpx;
    height: 50rpx;
    background-repeat: no-repeat;
}

.list_icon image {
    width: 50rpx;
    height: 50rpx;
}

.list_text {
    color: #353535;
    font-size: 32rpx;
    margin-left: 24rpx;
}

.item_list_msg .arrow {
    content: ' ';
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -9rpx;
    border: #999999 solid;
    border-width: 2px 0 0 2px;
    width: 18rpx;
    height: 18rpx;
    -webkit-transform: rotate(135deg);
}

.view-line{
    width: 100%;
    height: 24rpx; 
    background-color:#f5f5f5; 
}

/* 个人信息 */

.avatar-area {
    background: #515a6e;
    height: 350rpx;
}

.myInfo {
    text-align: center;
    padding-top: 50rpx
}
.myInfo .avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background-size: 100% 100% 
}
.myInfo .nickname{
    color: #fff;
    font-size: 36rpx;
    padding-top: 15rpx
}