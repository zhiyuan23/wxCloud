.weui-btn-area {
    margin: 40rpx 40rpx 0;
}

.oneLine {
    white-space: nowrap;
    overflow: hidden;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;
}

.multiLine {
    display: block;
    overflow: hidden;
    word-break: normal;
    word-wrap: break-word;
    min-height: 2.58823529em;
    /* line-height:2.58823529em; */
}

.align-items_start {
    align-items: flex-start;
    -webkit-box-align: flex-start;
    -webkit-align-items: flex-start;
}

.requiredInditify {
    color: red;
    /* width: 5px; */
    display: inline-block;
}

.page__hd {
    padding:  10px 20px;
}

.page__desc {
    margin-top: 5px;
    color: #1462ad;
    text-align: left;
    font-size: 12px;
}
.bottomLine {
    padding-bottom: 35rpx;

}
